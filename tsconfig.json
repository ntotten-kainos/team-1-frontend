{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
, "controllers", "models", "services"    ],
    "exclude": [
        "./node_modules/**/*",
        "./dist/**/*"
    ]
}